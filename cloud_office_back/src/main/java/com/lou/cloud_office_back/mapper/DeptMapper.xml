<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lou.cloud_office_back.mapper.DeptMapper">

    <select id="getDeptAll" resultType="com.lou.cloud_office_back.entity.Dept">
        select * from t_dept
    </select>

    <insert id="insertDept" parameterType="com.lou.cloud_office_back.entity.Dept">
        insert into t_dept(name)
        values (#{name,jdbcType=VARCHAR})
    </insert>

    <update id="updateDept" parameterType="com.lou.cloud_office_back.entity.Dept">
        update t_dept set name = #{name,jdbcType=VARCHAR}
        where id =#{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteDept" parameterType="com.lou.cloud_office_back.entity.Dept">
        delete from t_dept
        where id = #{id,jdbcType=INTEGER}
    </delete>

</mapper>
